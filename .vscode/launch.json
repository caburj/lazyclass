  "version": "0.2.0",
  "configurations": [
    {
      "request": "launch",
      "name": "Debug Deno Main",
      "type": "node",
      "program": "${workspaceFolder}/main.ts",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "/usr/local/bin/deno",
      "runtimeArgs": ["run", "--inspect-brk", "--allow-all"],
      "outputCapture": "std",
      "attachSimplePort": 9229
    },
    {
      "request": "launch",
      "name": "Debug Deno File",
      "type": "node",
      "program": "${workspaceFolder}",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "/usr/local/bin/deno",
      "runtimeArgs": ["run", "--inspect-brk", "--allow-all", "${file}"],
      "outputCapture": "std",
      "attachSimplePort": 9229
    }
  ]
}
